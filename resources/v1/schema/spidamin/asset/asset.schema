{
  "id": "#/spidamin/asset/asset.schema",
  "type": "object",
  "required": [
    "ownerId",
    "primaryAsset",
    "assetType"
  ],
  "properties": {
    "assetId": {
      "id": "assetId",
      "type": "string",
      "description": "Unique id for this asset"
    },
    "stationId": {
      "id": "assetId",
      "type": "string",
      "description": "The id of the parent station, used for updating and creation"
    },
    "ownerId": {
      "id": "ownerId",
      "type": "number",
      "description": "The id of the company that owns this asset"
    },
    "primaryAsset": {
      "type": "boolean",
      "description": "Whether this is the primary id at this station.  The primary asset's primary tag is generally displayed."
    },
    "assetType": {
      "id": "assetType",
      "type": "string",
      "enum": ["POLE", "NJUNS", "ANALYSIS","PHOTO","FILE"]
    },
    "assetAttachments": {
      "id": "assetAttachments",
      "type": "array",
      "description": "These represent other obect attached to this asset.",
      "items": {
        "type": "object",
        "required": [
          "companyId",
          "quantity",
          "type"
        ],
        "properties": {
          "companyId": {
            "type": "number"
          },
          "quantity": {
            "type": "number"
          },
          "type": {
            "type": "string"
          }
        }
      }
    },
    "assetDetails": {
      "id": "assetDetails",
      "type": "array",
      "description": "These represent additional information about this asset.",
      "items": {
        "id": "assetDetailsItem",
        "type": "object",
        "required": [
          "name",
          "value"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "value": {
            "type": [
              "string",
              "number",
              "boolean"
            ]
          }
        }
      }
    },
    "assetTags": {
      "id": "assetTags",
      "type": "array",
      "description": "These represent identifying information about this asset",
      "items": {
        "id": "assetTagsItem",
        "type": "object",
        "required": [
          "name",
          "primary",
          "value"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "primary": {
            "type": "boolean"
          },
          "value": {
            "type": "string"
          }
        }
      }
    }
  },
  "additionalProperties": false
}
