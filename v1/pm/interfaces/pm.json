{
  "id": "pm",
  "description": "Manage Projects in ProjectManager",
  "createOrUpdate": {
    "description": "creates a project",
    "type": "method",
    "params": [
      {
        "type": "https://raw.github.com/spidasoftware/schema/master/v1/pm/project.schema",
        "name": "project",
        "required": false,
        "description": "The project object to create or update"
      }
    ]
  },
  "getProjects": {
    "description": "Return a list of projects",
    "type": "method",
    "returns": "https://raw.github.com/spidasoftware/schema/master/public/v1/pm/projects.schema",
    "params": [
      {
        "type": "array",
        "name": "project_ids",
        "required": false,
        "description": "Get projects by projectmanager ids."
      },
      {
        "type": "array",
        "name": "project_codes",
        "required": false,
        "description": "Get projects by projectmanager project codes."
      },
      {
        "type": "array",
        "name": "am_station_ids",
        "required": false,
        "description": "Get projects containing stations with provided assetmaster station ids."
      },
      {
        "type": "boolean",
        "name": "details",
        "required": false,
        "description": "Get projects including all stations."
      }
    ]
  },
  "getFlows": {
    "description": "Return available flows",
    "type": "method",
    "returns": "https://raw.github.com/spidasoftware/schema/master/public/v1/pm/flows.schema"
  }
}