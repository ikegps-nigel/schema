{
  "id": "station",
  "description": "A SPIDAMin station",
  "type": "object",
  "properties": {
    "stationId": {
      "type": "string",
      "required": true
    },
    "dataProviderId": {
      "type": "number",
      "required": true,
      "description": "Id of company that provided the asset data"
    },
    "primaryAssetOwnerId": {
      "type": "number", 
      "required": true,
      "description": "Id of company that owns the primary asset"
    },
    "primaryAssetType": {
      "required": true,
      "type": "string",
      "description": "Type of the primary asset"
    },
    "assetTypes": {
      "required": true,
      "description": "All available asset types at this station",
      "type": "array",
      "items": {
        "type": "string",
        "required": true,
        "choices": [
          { "value": "POLE" },
          { "value": "NJUNS" },
          { "value": "ANALYSIS" }
        ]
      }
    },
    "geometry": {
      "$ref": "https://raw.github.com/spidasoftware/schema/master/v1/general/geometry.schema"
    },
    "stationAssets": {
      "$ref": "https://raw.github.com/spidasoftware/schema/master/v1/asset/assets.schema"
    }
  }
}