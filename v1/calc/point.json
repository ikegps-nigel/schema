{
	"id": "point",
	"type": "object",
	"description": "An object a certain distance and direction from the pole.",
	"properties": {
		"id": { 
			"type": "string",
			"required": true
		},
		"uuid": {
			"type": "string"
		},
		"distance": {
			"extends": { "$ref": "measurable" },
			"required": true
		},
		"direction": {
			"extends": { "$ref": "bearing" },
			"required": true
		}
	}
}
			
	
